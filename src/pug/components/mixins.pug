mixin review(text, author, location, skin, stars)
    .review.wrapper-sm
        .d-flex.justify-content-between 
            .rate.d-flex.justify-content-between 
                - for (let i = 0; i < 5; i++)
                    .rate-star(class=i < stars ? 'active' : '')
            .quotes 
                span “”
        p= text
        .d-flex.justify-content-between.align-items-center
            .author 
                strong= author
                p= `From ${location}`
            p= `bot Guaranteed skin: ${skin} | Full Access`

